<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tanlash">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        android:id="@+id/line004"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/linevertikal005"/>
    <Button
        android:onClick="onClikBontton"
        android:id="@+id/sonAktiv2"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:text="2 son"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/linevertikal005"
        app:layout_constraintTop_toTopOf="@id/line004"
        app:layout_constraintHorizontal_bias="0.8"/>
    <Button
        android:onClick="onClikBontton"
        android:id="@+id/sonAktiv3"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:text="3 son"
        app:layout_constraintStart_toStartOf="@id/linevertikal005"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/line004"
        app:layout_constraintHorizontal_bias="0.2"/>
</androidx.constraintlayout.widget.ConstraintLayout>